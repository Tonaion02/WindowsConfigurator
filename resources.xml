<?xml version="1.0"?>
<!-- The elements in OS is putted in the parent xml directory or in the directory we chose with from parameter -->
<data>
    <directory name="utils"/>
    <directory name="apps"/>

    <!-- use ref to refer to this directory from other parts of resources.xml, use name as ref if ref isn't found -->
    <!-- name is the name of the directory in the OS -->
    <directory name="source" ref="source">
        <directory name="rust"/>
        <directory name="C++"/> 
        <directory name="python"/>
        <directory name="C"/>
    </directory>

    <directory name="languages">
        <!-- To download, rename and put in the correct directory simply files -->
        <file name="carImage" url="https://unsplash.com/photos/Uk9OaQSbXEM/download?force=true" extension="png"/> 
    </directory>

    <!-- portable=true no installation, portable=false requires installation so what you download is only installer then garbage -->
    <!-- 'type' can be portable/installable/manually_installable -->
    <software name="softwareName" type="portable"/>
    

    <!-- A part can be easily solved with chocolatey -->
    <chocolatey-dependencies path=".config"/>
</data>